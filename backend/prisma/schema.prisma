generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  price        Float
  cuisine      String
  prepTime     Int
  mealTime     MealTime
  isVegan      Boolean
  isVegetarian Boolean
  ingredients  String
  instructions String
}

enum MealTime {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}
